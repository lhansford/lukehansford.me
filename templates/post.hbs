{{!< layout.hbs }}
<article class="blog-post h-entry">
  <h1 class="p-name">{{ page.title }}</h1>
  <div class="post-header__date">
    <time class="dt-published" datetime="{{formatDateHTML page.date}}">{{formatDate page.date}}</time>
  </div>
  <div class="e-content">{{{ page.html }}}</div>
</article>

<div id="disqus_thread"></div>
  <script type="text/javascript">
  var disqus_shortname = 'lukehansford'; // required: replace example with your forum shortname
  /* * * DON'T EDIT BELOW THIS LINE * * */
